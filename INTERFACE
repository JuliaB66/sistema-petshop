        function renderClientes() {
            const container = document.getElementById('clientes-container');
            container.innerHTML = ''; // Limpa o container

            clientes.forEach(cliente => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <h3>${cliente.nome}</h3>
                    <p><strong>CPF:</strong> ${cliente.cpf}</p>
                    <p><strong>Telefone:</strong> ${cliente.telefone}</p>
                    <p><strong>Endere√ßo:</strong> ${cliente.endereco}</p>
                `;
                container.appendChild(card);
            });
        }

        // Fun√ß√£o para popular a lista de pets
        function renderPets() {
            const container = document.getElementById('pets-container');
            container.innerHTML = ''; // Limpa o container

            pets.forEach(pet => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <h3>${pet.nome}</h3>
                    <p><strong>Esp√©cie:</strong> ${pet.especie}</p>
                    <p><strong>Ra√ßa:</strong> ${pet.raca || 'N√£o informada'}</p>
                    <p><strong>Dono:</strong> ${pet.dono}</p>
                    <p><strong>Nascimento:</strong> ${formatDate(pet.nascimento)}</p>
                `;
                container.appendChild(card);
            });
        }

        // Fun√ß√£o para popular os selects de donos nos formul√°rios de cadastro de pet
        function populateDonoSelect() {
            const donoPetSelect = document.getElementById('dono-pet');
            donoPetSelect.innerHTML = '<option value="">Selecione o Dono</option>'; // Limpa e adiciona a op√ß√£o padr√£o
            clientes.forEach(cliente => {
                const option = document.createElement('option');
                option.value = cliente.nome;
                option.textContent = cliente.nome;
                donoPetSelect.appendChild(option);
            });
        }

        // Fun√ß√£o para popular os selects de pets nos formul√°rios de agendamento
        function populatePetSelects() {
            const petConsultaSelect = document.getElementById('pet-consulta');
            const petVacinaSelect = document.getElementById('pet-vacina');

            // Limpa as op√ß√µes existentes (exceto a primeira "Selecione o Pet")
            petConsultaSelect.innerHTML = '<option value="">Selecione o Pet</option>';
            petVacinaSelect.innerHTML = '<option value="">Selecione o Pet</option>';

            pets.forEach(pet => {
                const optionConsulta = document.createElement('option');
                optionConsulta.value = pet.nome;
                optionConsulta.textContent = pet.nome + ' (' + pet.especie + ')';
                petConsultaSelect.appendChild(optionConsulta);

                const optionVacina = document.createElement('option');
                optionVacina.value = pet.nome;
                optionVacina.textContent = pet.nome + ' (' + pet.especie + ')';
                petVacinaSelect.appendChild(optionVacina);
            });
        }

        // Fun√ß√£o para formatar a data para exibi√ß√£o
        function formatDate(dateString) {
            // Verifica se a data j√° est√° no formato DD/MM/AAAA (ex: '20/11/2023')
            if (dateString.includes('/')) {
                return dateString;
            }
            // Se a data est√° no formato AAAA-MM-DD (vindo do input date ou dados simulados)
            const [year, month, day] = dateString.split('-');
            return `${day}/${month}/${year}`;
        }

        // Fun√ß√£o para renderizar os agendamentos de consultas (na se√ß√£o de agendamento)
        function renderAgendamentosConsultas() {
            const containerAgendar = document.getElementById('proximas-consultas-container');
            containerAgendar.innerHTML = ''; // Limpa o container da se√ß√£o de agendamento

            const hoje = new Date();
            hoje.setHours(0, 0, 0, 0); // Zera o tempo para compara√ß√£o apenas de data

            const consultasFuturas = agendamentosConsultas.filter(agendamento => {
                const dataConsulta = new Date(agendamento.data + 'T00:00:00'); // Adiciona T00:00:00 para evitar problemas de fuso hor√°rio
                return dataConsulta >= hoje;
            }).sort((a, b) => new Date(a.data + 'T00:00:00') - new Date(b.data + 'T00:00:00')); // Ordena por data

            if (consultasFuturas.length === 0) {
                const noAgendaMessage = '<p style="color: #78909C; text-align: center;">Nenhuma consulta agendada ainda.</p>';
                containerAgendar.innerHTML = noAgendaMessage;
                return;
            }

            // Renderiza para a se√ß√£o de agendamento
            consultasFuturas.forEach(agendamento => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <h3>Consulta para ${agendamento.pet}</h3>
                    <p><strong>Data:</strong> ${formatDate(agendamento.data)}</p>
                    <p><strong>Hor√°rio:</strong> ${agendamento.hora}</p>
                    <p><strong>Motivo:</strong> ${agendamento.motivo}</p>
                    <p><strong>Status:</strong> Agendado</p>
                `;
                containerAgendar.appendChild(card);
            });
        }

        // Fun√ß√£o para renderizar os agendamentos de vacinas
        function renderAgendamentosVacinas() {
            const container = document.getElementById('proximas-vacinas-container');
            container.innerHTML = ''; // Limpa o container

            const hoje = new Date();
            hoje.setHours(0, 0, 0, 0);

            const vacinasFuturas = agendamentosVacinas.filter(agendamento => {
                const dataVacina = new Date(agendamento.data + 'T00:00:00');
                return dataVacina >= hoje;
            }).sort((a, b) => new Date(a.data + 'T00:00:00') - new Date(b.data + 'T00:00:00'));

            if (vacinasFuturas.length === 0) {
                container.innerHTML = '<p style="color: #78909C; text-align: center;">Nenhuma vacina agendada ainda.</p>';
                return;
            }

            vacinasFuturas.forEach(agendamento => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <h3>Vacina de ${agendamento.tipo} para ${agendamento.pet}</h3>
                    <p><strong>Data:</strong> ${formatDate(agendamento.data)}</p>
                    <p><strong>Status:</strong> Agendada</p>
                `;
                container.appendChild(card);
            });
        }

        // Fun√ß√£o para mostrar a se√ß√£o correta
        function showSection(sectionId) {
            const sections = document.querySelectorAll('.section');
            sections.forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');

            // Renderiza dados espec√≠ficos ao mudar de se√ß√£o
            if (sectionId === 'clientes') {
                renderClientes();
            } else if (sectionId === 'pets') {
                renderPets();
            } else if (sectionId === 'cadastrar-pet') {
                populateDonoSelect(); // Popula o select de donos antes de mostrar o form
            } else if (sectionId === 'agendar-consulta') {
                populatePetSelects();
                renderAgendamentosConsultas(); // Mostra os agendamentos existentes
            } else if (sectionId === 'agendar-vacina') {
                populatePetSelects();
                renderAgendamentosVacinas(); // Mostra os agendamentos existentes
            }
            // Home n√£o precisa de renderiza√ß√£o extra aqui, j√° que o emoji √© est√°tico
        }

        // Event listener para o formul√°rio de cadastro de clientes
        document.getElementById('cliente-form').addEventListener('submit', function(e) {
            e.preventDefault();

            const nome = document.getElementById('nome-cliente').value;
            const cpf = document.getElementById('cpf').value;
            const telefone = document.getElementById('telefone').value;
            const endereco = document.getElementById('endereco').value;

            // Cria um novo cliente e adiciona ao array
            const newCliente = {
                id: clientes.length > 0 ? Math.max(...clientes.map(c => c.id)) + 1 : 1,
                nome, cpf, telefone, endereco
            };
            clientes.push(newCliente);
            
            renderClientes(); // Re-renderiza a lista de clientes
            populateDonoSelect(); // Atualiza o select de donos para pets
            document.getElementById('cliente-form').reset();
            alert('Cliente cadastrado com sucesso! üë®‚Äçüë©‚Äçüëß‚Äçüë¶');
        });

        // Event listener para o formul√°rio de cadastro de pets
        document.getElementById('pet-cadastro-form').addEventListener('submit', function(e) {
            e.preventDefault();

            const nomePet = document.getElementById('nome-pet').value;
            const especiePet = document.getElementById('especie-pet').value;
            const racaPet = document.getElementById('raca-pet').value;
            const nascimentoPet = document.getElementById('nascimento-pet').value;
            const donoPet = document.getElementById('dono-pet').value;

            // Cria um novo pet e adiciona ao array
            const newPet = {
                id: pets.length > 0 ? Math.max(...pets.map(p => p.id)) + 1 : 1,
                nome: nomePet,
                especie: especiePet,
                raca: racaPet,
                nascimento: nascimentoPet,
                dono: donoPet
            };
            pets.push(newPet);

            renderPets(); // Re-renderiza a lista de pets
            populatePetSelects(); // Atualiza os selects de pets para agendamentos
            document.getElementById('pet-cadastro-form').reset();
            alert(`Pet ${nomePet} cadastrado com sucesso para ${donoPet}! üê∂`);
        });

        // Event listener para o formul√°rio de agendar consultas
        document.getElementById('agendar-consulta-form').addEventListener('submit', function(e) {
            e.preventDefault();

            const pet = document.getElementById('pet-consulta').value;
            const data = document.getElementById('data-consulta').value;
            const hora = document.getElementById('hora-consulta').value;
            const motivo = document.getElementById('motivo-consulta').value;

            if (pet && data && hora && motivo) {
                const newAgendamento = { pet, data, hora, motivo };
                agendamentosConsultas.push(newAgendamento);
                renderAgendamentosConsultas();
                document.getElementById('agendar-consulta-form').reset();
                alert(`Consulta agendada para ${pet} em ${formatDate(data)} √†s ${hora}! ‚úîÔ∏è`);
            } else {
                alert('Por favor, preencha todos os campos para agendar a consulta.');
            }
        });

        // Event listener para o formul√°rio de agendar vacinas
        document.getElementById('agendar-vacina-form').addEventListener('submit', function(e) {
            e.preventDefault();

            const pet = document.getElementById('pet-vacina').value;
            const tipoVacina = document.getElementById('tipo-vacina').value;
            const data = document.getElementById('data-vacina').value;

            if (pet && tipoVacina && data) {
                const newAgendamento = { pet, tipo: tipoVacina, data };
                agendamentosVacinas.push(newAgendamento);
                renderAgendamentosVacinas();
                document.getElementById('agendar-vacina-form').reset();
                alert(`Vacina de ${tipoVacina} agendada para ${pet} em ${formatDate(data)}! üíâ`);
            } else {
                alert('Por favor, preencha todos os campos para agendar a vacina.');
            }
        });

        // Garante que a se√ß√£o "Home" esteja ativa e as listas sejam renderizadas ao carregar a p√°gina
        document.addEventListener('DOMContentLoaded', function() {
            showSection('home');
            renderClientes(); // Renderiza os clientes ao carregar
            renderPets(); // Renderiza os pets ao carregar
            populateDonoSelect(); // Popula o select de donos
            populatePetSelects(); // Popula os selects de pets
            renderAgendamentosConsultas();
            renderAgendamentosVacinas();
        });
    </script>

</body>
</html>
